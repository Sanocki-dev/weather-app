<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/assets/weather_icon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <title>{{title}}</title>
  </head>

  <body>
    <div class="main-content">
      {{>header}}

      <div class="weather-form">
        <div class="top-container">

          <form method="get">
            <div class="location-input">
              <button type="submit">
                <span class="material-symbols-outlined">
                  navigation
                </span>
              </button>
              <input
                type="text"
                autocomplete="false"
                spellcheck="false"
                placeholder="Location"
              />
            </div>
          </form>

          <h1 id="location">Enter a location</h1>

          <div class="weather-icon_container">
            <img
              id="weather-icon"
              src="/assets/default.svg"
              alt="weather-icon"
            />
          </div>
          <p id="message-1"></p>
          <p id="message-2"></p>
          <p id="feelslike"></p>
        </div>

        <div class="breakdown">
          {{>breakdown label='wind' icon="air" unit="km/h"}}
          {{>breakdown label='pressure' icon="compress" unit="mb"}}
          {{>breakdown label='visibility' icon="visibility" unit="%"}}
          {{>breakdown label='humidity' icon="humidity_high" unit="%"}}
        </div>

        {{>breakdown}}
        {{error}}
        {{forecast}}
      </div>
    </div>

    {{>footer}}

    <script src="/js/app.js"></script>
  </body>

</html>